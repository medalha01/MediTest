datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String
}

model Drug {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  manufacturer String
  buyCost      Int
  composition  String
  Storage      Storage[]
}

model Storage {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  drugId   String @db.ObjectId
  quantity Int

  drug Drug @relation(fields: [drugId], references: [id])
}
